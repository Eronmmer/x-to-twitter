{
  "manifest_version": 3,
  "name": "X to Twitter",
  "version": "1.0",
  "description": "Replaces the noun 'X' with 'Twitter' on the Twitter timeline.",
  "permissions": [
    "activeTab",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}